<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_list_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:background="@drawable/list_item_pressed_select"
              android:orientation="vertical"
              android:paddingLeft="5dp"
              android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cv_header"
                android:layout_width="25dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_heard"
                android:padding="1dp"
                android:src="@drawable/flash"
                android:layout_alignParentBottom="true"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/cv_header"
                android:text="大南瓜先生"
                android:textColor="#ff8162"
                android:textSize="12sp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentBottom="true"
                android:text="至于先生"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_status"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentBottom="true"
                android:text="审核中"
                android:layout_marginLeft="4dp"
                android:layout_alignBottom="@+id/tv_title"
                android:textColor="#76bb76"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/tv_title"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:text="14min"
                android:textSize="10sp"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_marginTop="4dp"
                android:maxLines="3"
                android:text="春天的风带不去昨日的爱恋,春天的风带不去昨日的爱恋,春天的风带不去昨日的爱恋,春天的风带不去昨日的爱恋,春天的风带不去昨日的爱恋,春天的风带不去昨日的爱恋"
                android:textSize="12sp"
                />

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="60dp"
                android:visibility="gone"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:background="@color/view_color"
                android:scaleType="centerCrop"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:drawablePadding="12dp"
                android:text="至于先生"

                android:textColor="@color/text_color_name"
                android:textSize="10sp"
                />

            <TextView
                android:id="@+id/tv_favorite_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_favorite"
                android:text="等23人"

                android:textColor="@color/text_color_num"
                android:textSize="10sp"
                />

            <TextView
                android:id="@+id/tv_pinglun_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:drawablePadding="4dp"
                android:text="100"
                android:textSize="10sp"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>